<h1>Posts</h1>
<p>The posts with the most!</p>
<h1>New Post for <%= @place.name %></h1>
<%= form_with(model: [@place, @post], url: place_posts_path(@place)) do |form| %>
  <div>
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>
  <div>
    <%= form.label :description %>
    <%= form.text_area :description %>
  </div>
  <div>
    <%= form.label :created_at %>
    <%= form.date_field :created_at %>
  </div>
  <%= form.hidden_field :place_id, value: @place.id %>
  <div>
    <%= form.submit 'Create Post' %>
  </div>
<% end %>